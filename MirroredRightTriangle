public class MirroredRightTriangle {
    public static void main(String []args){
        for(int i=0;i<=3;i++){
            for(int j=3;j>=i;j--){
                System.out.print(" ");
            }
            for(int j=0;j<=i;j++){
                if(i==j||i==3||j==0) {
                    System.out.print("* ");
                }
                else {
                    System.out.print("  ");
                }
            }
            System.out.println();
        }
    }
}
